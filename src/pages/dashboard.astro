---
import Layout from "../layouts/Layout.astro";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/login");
}
---

<Layout title="Dashboard - 10x Gym Planner">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4">Welcome, {user.email}!</h1>
    <div class="bg-blue-950 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="/plans" class="block p-4 bg-blue-900 rounded-lg hover:bg-blue-800 transition-colors">
          <h3 class="font-semibold mb-2">Training Plans</h3>
          <p class="text-blue-100/80">View and manage your training plans</p>
        </a>
        <a href="/workouts" class="block p-4 bg-blue-900 rounded-lg hover:bg-blue-800 transition-colors">
          <h3 class="font-semibold mb-2">Workouts</h3>
          <p class="text-blue-100/80">Start or continue your workout</p>
        </a>
        <a href="/progress" class="block p-4 bg-blue-900 rounded-lg hover:bg-blue-800 transition-colors">
          <h3 class="font-semibold mb-2">Progress</h3>
          <p class="text-blue-100/80">Track your training progress</p>
        </a>
      </div>
    </div>
  </div>
</Layout>
