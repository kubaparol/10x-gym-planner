---
import Layout from "../../layouts/Layout.astro";
import { NewPasswordForm } from "../../components/auth/NewPasswordForm";

export const prerender = false;

const token = Astro.url.searchParams.get("token");
if (!token) {
  return Astro.redirect("/reset-password");
}
---

<Layout title="Set New Password - 10x Gym Planner">
  <div class="min-h-screen">
    <main class="container max-w-md mx-auto px-4 py-8 min-h-screen flex items-center justify-center">
      <NewPasswordForm token={token} client:load />
    </main>
  </div>
</Layout>
